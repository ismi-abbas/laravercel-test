{
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.9.0",
            "excludeFiles": [
                "node_modules/**",
                "tests/**",
                "storage/logs/**",
                "storage/framework/**",
                "vendor/**/tests/**",
                "vendor/**/docs/**",
                "vendor/**/examples/**",
                "vendor/**/phpunit/**",
                "vendor/**/mocks/**",
                "**/*.md"
            ]
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}
